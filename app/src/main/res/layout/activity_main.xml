<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boxTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="600dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/startButton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="600dp"
        android:layout_marginRight="185dp"
        android:text="@string/startPlay"
        android:onClick="startPlaying"
        android:backgroundTint="@color/green"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="185dp"
        android:text="@string/stopPlay"
        android:onClick="stopPlaying"
        android:backgroundTint="@color/red"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/DrukenLullbies"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="450dp"
        android:text="@string/songDL"
        android:onClick="setDL"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/Metropolis"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="250dp"
        android:text="@string/songMetro"
        android:onClick="setMetro"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/WAP"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:text="@string/songWAP"
        android:onClick="setWAP"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/famousFriends"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:text="@string/songFamousFriends"
        android:onClick="setFF"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/NGGYU"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="350dp"
        android:text="@string/songNGGYU"
        android:onClick="setNGGYU"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>